/ {
	chosen {
		zephyr,uart-mcumgr = &cdc_acm_uart0;
	};
	
    aliases {
		mcuboot-button0 = &button0;
        mcuboot-led0 = &led0;
    };

    buttons {
		compatible = "gpio-keys";

		button0: button_0 {
			gpios = <&gpio0 31 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
			label = "Push button switch 0";
			zephyr,code = <INPUT_KEY_0>;
		};
    };
};
